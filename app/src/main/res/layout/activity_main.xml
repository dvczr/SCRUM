<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/cl_aMain_containerBackground"
    tools:context=".MainActivity">

    <fragment
        android:id="@+id/f_main"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:defaultNavHost="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/cl_containerBottomAppBar"
        app:navGraph="@navigation/my_nav" />


    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/cl_containerBottomAppBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#DA72E7"
            android:contentDescription="@string/contentDescription_fab"
            android:src="@drawable/ic_create_new_task"
            app:layout_anchor="@+id/ap_bottom_menu"
            app:layout_anchorGravity="bottom|center"
            app:rippleColor="@color/purple_700" />

        <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/ap_bottom_menu"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginStart="-16dp"
            app:fabCradleMargin="40dp"
            app:fabCradleRoundedCornerRadius="87dp"
            android:layout_gravity="center"
            app:navigationIconTint="#E7C3F6"
            android:filterTouchesWhenObscured="true">

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottomNavigationView"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/transparent"
                app:itemIconSize="40dp"
                app:itemRippleColor="#F86193"
                app:menu="@menu/bottom_menu"
                android:filterTouchesWhenObscured="true"
                />

        </com.google.android.material.bottomappbar.BottomAppBar>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.constraintlayout.widget.ConstraintLayout>