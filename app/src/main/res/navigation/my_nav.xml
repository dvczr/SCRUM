<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/listFragment">

    <fragment
        android:id="@+id/listFragment"
        android:name="com.dvczr.scrum.fragments.list.ListFragment"
        android:label=""
        tools:layout="@layout/fragment_list" >
        <action
            android:id="@+id/action_listFragment_to_addFragment"
            app:destination="@id/createFragment" />
        <action
            android:id="@+id/action_listFragment_to_editFragment"
            app:destination="@id/editFragment" />
        <argument
            android:name="currentTask"
            app:argType="com.dvczr.scrum.model.Task" />
    </fragment>
    <fragment
        android:id="@+id/createFragment"
        android:name="com.dvczr.scrum.fragments.create.CreateFragment"
        android:label="Create a New Task"
        tools:layout="@layout/fragment_create" >
        <action
            android:id="@+id/action_addFragment_to_listFragment"
            app:destination="@id/listFragment" />
    </fragment>
    <fragment
        android:id="@+id/editFragment"
        android:name="com.dvczr.scrum.fragments.edit.EditFragment"
        android:label="Edit Task"
        tools:layout="@layout/fragment_edit" >
        <action
            android:id="@+id/action_editFragment_to_listFragment"
            app:destination="@id/listFragment" />
        <argument
            android:name="currentTask"
            app:argType="com.dvczr.scrum.model.Task" />
    </fragment>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.dvczr.scrum.fragments.about.AboutFragment"
        android:label="About Us"
        tools:layout="@layout/fragment_about" />
</navigation>